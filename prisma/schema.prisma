generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
    id Int @id @default(autoincrement())
    fullname String
    email String @unique
    password String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Product {
    id Int @id @default(autoincrement())

    name String
    imageUrl String

    ingredients Ingredient[]
    items   ProductItem[]

    category Category @relation(fields: [categoryId], references: [id])
    categoryId Int

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

}

model ProductItem {
    id Int @id @default(autoincrement())

    price Int
    size Int?
    pizzaType Int?

    product Product @relation(fields: [productId], references: [id])
    productId Int
}

model Category {
    id Int @id @default(autoincrement())

    name String @unique
    products Product[]
}

model Ingredient {
    id Int @id @default(autoincrement())

    name String
    price  Int
    imageUrl String

    products Product[]

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}